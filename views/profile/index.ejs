
<% layout('/layouts/boilerplate') -%>

<main class="container mt-5">
    <section>
    <% for(let realpet of realpets){ %>
            <% let pet = pets.find(p => (p.id == realpet.species));%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img id="xeopet" class="img-fluid" src="<%= pet.img %>">
                    </div> 
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Nickname: <%= realpet.nickname %></h5>
                            <p class="card-text">Species: <%= pet.name %></p>
                        </div>
                    </div>
                </div>
            </div>
    <% } %>  
    </section>  
</main>
