<% layout('/layouts/boilerplate') -%>
        <main class="container mt-5">
            <section>
            <% for(let pet of pets){ %>
                    <div class="card" mb-3>
                        <div class="row">
                            <div class="col-md-4">
                                <img id="xeopet" class="img-fluid" src="<%= pet.img %>">
                            </div> 
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= pet.name %></h5>
                                    <a class="btn btn-primary my-2" href="/pets/<%= pet._id %>">See Details</a>
                                    <form action="/adopt" method="POST">
                                        <button class="btn btn-danger my-2">Adopt a <%= pet.name %></button>
                                        <input name="nickname" type="text" class="form-control my-2"  aria-describedby="emailHelp">
                                        <div id="emailHelp" class="form-text">Nickname your <%= pet.name %>! </div>
                                        <input type="hidden" name="petID" value="<%= pet._id %>">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            <% } %>  
            </section>  
        </main>